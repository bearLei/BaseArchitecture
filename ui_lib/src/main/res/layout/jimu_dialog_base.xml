<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_dialog_content_bg">

        <TextView
            android:id="@+id/_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:textColor="@color/base_6b6b6b"
            android:textSize="@dimen/sp_20" />

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_42"
            android:layout_below="@+id/_dialog_title"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/_dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_107"
                android:layout_gravity="center_horizontal|top"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_4"
                android:textColor="@color/base_6b6b6b"
                android:scrollbars="vertical"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_37"
            android:layout_below="@id/content_layout"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_42"
            android:layout_marginBottom="@dimen/dp_31"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/_dialog_left_btn"
                android:layout_width="@dimen/dp_128"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/shape_dialog_cancel"
                android:gravity="center"
                android:textColor="@color/base_f5af3f"
                android:textSize="@dimen/sp_20"
                android:visibility="gone" />

            <TextView
                android:id="@+id/_dialog_right_btn"
                android:layout_width="@dimen/dp_128"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_dialog_ok"
                android:gravity="center"
                android:textColor="@color/base_ffffff"
                android:textSize="@dimen/sp_20" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>