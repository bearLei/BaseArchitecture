<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="29dp"
        android:gravity="center_horizontal"
        android:textColor="@color/base_000000"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="29dp"
        android:alpha="0.5"
        android:gravity="center_horizontal"
        android:textColor="@color/base_000000"
        android:textSize="16sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/_dialog_top_btn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/shape_dialog_ok"
            android:gravity="center"
            android:textColor="@color/base_ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/_dialog_bottom_btn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:gravity="center"
            android:textColor="@color/base_000000"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>